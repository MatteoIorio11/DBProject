@model IEnumerable<Hospital.Models.cura>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success</strong> @TempData["SuccessMessage"]
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdCura }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdCura }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdCura }) |
                @Html.ActionLink("Aggiungi Medicinale", "AggiungiMedicinale", new { id = item.IdCura })

            </td>
        </tr>
    }

</table>
