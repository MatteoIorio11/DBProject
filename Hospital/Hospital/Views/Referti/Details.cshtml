@model Hospital.Models.referto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>referto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descrizione)
        </dd>

    </dl>
</div>
<h3>Cure associate al referto</h3>
<table class="table">
    <tr>
        <th>
            Id Cura
        </th>
        <th>
            Descrizione
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.curas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdReferto }) |
    @Html.ActionLink("Back to List", "Index")
</p>
