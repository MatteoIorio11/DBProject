        <h3>Tipologie del chirurgo</h3>
        <table class="table">
            <tr>
                <th>
                    <label>Id Tipologia</label>
                </th>
                <th>
                    <label>Descrizione </label>
                </th>
            </tr>
            @foreach (var medi in Model.tipologias)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(model => medi.IdTipologia)

                    </th>
                    <th>
                        @Html.DisplayFor(model => medi.Descrizione)

                    </th>
                </tr>

            }
        </table>
    </div>
